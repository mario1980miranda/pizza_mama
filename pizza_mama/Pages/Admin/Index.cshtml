@page
@model pizza_mama.Pages.Admin.IndexModel
@{
}

@if (Model.IsDevelopmentMode)
{
    <p>MODE DEVELOPPMENT</p>
} 

<h1>Vous devez vous authentifier</h1>
@if (Model.DisplayInvalidAccountMessage)
{
    <br />
    <div class="alert alert-danger" role="alert">
        ERREUR : Compte invalide
    </div>
}
<br />
<form method="post">
    <input type="text" name="username" placeholder="Login"><br /><br />
    <input type="password" name="password" placeholder="Mot de passe"><br /><br />
    <button>Se connecter</button>
</form>
