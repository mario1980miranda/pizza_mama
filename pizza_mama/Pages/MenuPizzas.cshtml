@page
@model pizza_mama.Pages.Admin.MenuPizzasModel
@{
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" href="~/css/style.css" />
    <title>Menu des Pizzas</title>
</head>
<body>
    <a asp-page="Index"><img src="~/images/small_logo.png" id="small_logo"/></a>
    <div class="menu_title">
        <h1>Les Pizzas</h1>
    </div>
    <div class="menu_list">
        @foreach (var item in Model.Pizza)
        {
            <div class="menu_list_item">
                <span class="menu_list_title">@Html.DisplayFor(modelItem => item.nom)</span>
                <span class="menu_list_price">@String.Format("{0:0.00}", item.prix) $CA</span>
                <br/>
                <span class="menu_list_ingredients">@Html.DisplayFor(modelItem => item.ingredients)</span>
            </div>
        }
    </div>
</body>
</html>
